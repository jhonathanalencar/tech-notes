{
  "openapi": "3.0.0",
  "info": {
    "title": "techNotes API",
    "description": "Essa é a documentação para a techNotes API",
    "contact": {
      "name": "API Suport",
      "url": "http://www.google.com",
      "email": "jhonathan.alencarfs@gmail.com"
    },
    "version": "0.0.1"
  },
  "servers": [
    {
      "url": "http://localhost:3500",
      "description": "techNotes API"
    }
  ],
  "tags": [
    {
      "name": "auth",
      "description": "Autenticação"
    },
    {
      "name": "users",
      "description": "Gerenciamento de usuários"
    }
  ],
  "paths": {
    "/auth": {
      "post": {
        "tags": ["auth"],
        "summary": "Realiza o login",
        "description": "Essa rota é reponsável por autenticar o usuário",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "username": "Anna",
                  "password": "Anna123"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Operação realizada com sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "accessToken": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "accessToken": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c2VySW5mbyI6eyJ1c2VybmFtZSI6Ik1pa2FzYSIsInJvbGVzIjpbIkVtcGxveWVlIiwiTWFuYWdlciIsIkFkbWluIl19LCJpYXQiOjE2NzU4OTk5MTcsImV4cCI6MTY3NTkwMDgxN30.LYZqBx-Pn9dEVV9BsTQ6QoJ8me5Xkf1_GRTjxFSihvw"
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          }
        }
      }
    },
    "/auth/refresh": {
      "get": {
        "tags": ["auth"],
        "summary": "Retorna um novo access token",
        "description": "Essa rota é reponsável por retornar um novo access token.",
        "responses": {
          "200": {
            "description": "Operação realizada com sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "accessToken": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "accessToken": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c2VySW5mbyI6eyJ1c2VybmFtZSI6Ik1pa2FzYSIsInJvbGVzIjpbIkVtcGxveWVlIiwiTWFuYWdlciIsIkFkbWluIl19LCJpYXQiOjE2NzU5NDAzNzYsImV4cCI6MTY3NTk0MTI3Nn0.ssnsRYsa5KWI27G_cQ4uGJ8mpAc18x1aQPfTfQCfMLk"
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/UnauthenticatedError"
          },
          "403": {
            "$ref": "#/components/responses/UnauthorizedError"
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": ["auth"],
        "summary": "Faz logout do usuário",
        "description": "Essa rota é reponsável por realizar o logout do usuário",
        "responses": {
          "200": {
            "description": "Operação realizada com sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "message": "Cookie cleared"
                  }
                }
              }
            }
          },
          "204": {
            "description": "Sem conteúdo."
          }
        }
      }
    },
    "/users": {
      "post": {
        "tags": ["users"],
        "summary": "Cria um novo usuário",
        "description": "Essa rota é reponsável por criar um novo usuário",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "roles": {
                    "$ref": "#/components/schemas/Roles"
                  }
                },
                "example": {
                  "username": "Anna",
                  "password": "Anna123",
                  "roles": ["Employee"]
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Operação realizada com sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "message": "New user Anna created"
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/UnauthenticatedError"
          },
          "409": {
            "description": "Username já está sendo utilizado.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "error": "Duplicate username"
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["users"],
        "summary": "Listagem de usuários",
        "description": "Essa rota é reponsável por listar todas os usuários",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/UnauthenticatedError"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Roles": {
        "type": "string",
        "enum": ["Employee", "Manager", "Admin"]
      },
      "User": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "roles": {
            "$ref": "#/components/schemas/Roles"
          },
          "active": {
            "type": "boolean"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Note": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "userId": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "text": {
            "type": "string"
          },
          "completed": {
            "type": "boolean"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "responses": {
      "UnauthenticatedError": {
        "description": "Não autorizado.",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string"
                }
              },
              "example": {
                "error": "Unauthorized"
              }
            }
          }
        }
      },
      "UnauthorizedError": {
        "description": "Não permitido.",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string"
                }
              },
              "example": {
                "error": "Forbidden"
              }
            }
          }
        }
      }
    }
  }
}
